algoritmo "Outros Operadores"
// Função : Outros Operadores
// Autor : Melissa Perdomo
// Data : 30/08/2024
// Seção de Declarações 
var
 x, y: real
 a, b: inteiro
inicio
      escreval ("O operador DIV faz uma divisão inteira, sem considerar casa decimal. Ex:")
      x <- 10 DIV 3
      escreva ("10 DIV 3 = ")
      escreval (x)
      
      y <- 8 DIV 2
      escreva ("8 DIV 2 = ")
      escreval (y)

      escreval
      escreval ("O operador MOD, calcula o resto de uma divisão. Ex:")
      a <- 10 MOD 3
      escreva ("10 MOD 3 = ")
      escreval (a)
      
      b <- 8 MOD 2
      escreva ("8 MOD 2 = ")
      escreval (b)

fimalgoritmo
